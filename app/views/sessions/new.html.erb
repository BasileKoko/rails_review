<%= form_for(:session, :html => {class:"form-horizontal", role:"form"}, url: login_path) do |f| %>
<fieldset>
  <div align='center'>
  <div id="legend">
    <legend class="">Login</legend>
  </div>

  <div class="control-group">
    <!-- Username -->
    <%= f.label :email, class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <!-- Username -->
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, class: 'input-xlarge' %>
    </div>
  </div><br>
  <div class="control-group">
  <%= f.submit :SignIn, class: "btn btn-primary" %>
</div>
</div>
  <% end %>
